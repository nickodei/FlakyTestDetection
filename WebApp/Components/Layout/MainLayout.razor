@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="Header" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="sidebar1Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Scraper" Path="Scraper" Icon="manage_history" />
            <RadzenPanelMenuItem Text="Data" Icon="storage" Expanded="true">
                <RadzenPanelMenuItem Text="Summary" Path="Summary" Icon="web" />
                <RadzenPanelMenuItem Text="Repositories" Path="RepositoryList" Icon="web"/>
                <RadzenPanelMenuItem Text="Workflows" Path="WorkflowList" Icon="web"/>
                <RadzenPanelMenuItem Text="Workflow-runs" Path="WorkflowRunList" Icon="web"/>
                <RadzenPanelMenuItem Text="Test-suites" Path="TestSuiteList" Icon="web"/>
                <RadzenPanelMenuItem Text="Tests" Path="TestList" Icon="web"/>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Visualisations" Icon="auto_awesome" Expanded="true">
                <RadzenPanelMenuItem Text="Over time" Path="TestVisualisations" Icon="web"/>
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <ChildContent>
            <RadzenContentContainer Name="main">
                @Body
            </RadzenContentContainer>
        </ChildContent>
    </RadzenBody>
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;
}